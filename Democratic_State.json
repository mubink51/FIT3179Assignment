{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 550,
  "height": 450,
  "background": "#f5f3ed",
  "title": {"text": "Democratic State 2016", "fontSize": 25},
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/ne_110m_admin_1_states_provinces%20(1).json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_1_states_provinces"
    }
  },
  "params": [
    
  ],
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/elections96_16numeric2.csv"
        },
        "key": "State",
        "fields": [
          "WP2016",
          "WP2012",
          "WP2008",
          "WP2004",
          "WP2000",
          "WP1996",
          "MOV2016",
          "MOV2012",
          "MOV2008",
          "MOV2004",
          "MOV2000",
          "MOV1996",
          "State",
          "2016",
          "2012",
          "2008",
          "2004",
          "2000",
          "1996",
          "W2016",
          "W2012",
          "W2008",
          "W2004",
          "W2000",
          "W1996"
        ]
      }
    }

  ],
  "layer": [
    {
      "projection": {"type": "albersUsa"},
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["State"],
          "bind": "legend",
          "on": "mouseover"
        }
      },
      "mark": {"type": "geoshape", "stroke": "#f5f3ed"},
      "encoding": {
        "stroke": {
          "condition": {"selection": "region_highlight", "value": "#f5f3ed"},
          "value": "#f5f3ed"
        },
        "color": {
          "field": "WP2016",
          "type": "quantitative",
          "legend": null,
          "scale": {
            "type": "threshold",
            "domain": [-0.1, 0.1],
            "range": ["#1f78b4", ""]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "State", "title": "State"},
          {"field": "WP2016", "title": "Winning Party"},
          {"field": "mov", "title": "Margin of Victory", "format": ".0%"}
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "orient": "none",
      "legendX": 350,
      "legendY": 40,
      "direction": "horizontal",
      "labelFontSize": 12,
      "titleFontSize": 14,
      "titlePadding": 5
    },
    "style": {"cell": {"stroke": "transparent"}}
  }
}
