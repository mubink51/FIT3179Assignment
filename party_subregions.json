{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Assignment/main/np.csv"
  },
  "title": {"text":"Proportion of States won by Subregion", "fontSize":25, "subtitle":[" "], "subtitlePadding":20, "subtitleFontSize":15},
  "background": "#f5f3ed",
  "width": 400,
  "height": 400,
  "params": [
    {
      "name": "year_select",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 1996,
        "max": 2016,
        "step": 4,
        "name": "Select Election"
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year==year_select"},
    {
      "calculate": "datum.Party == 'Democrat'? 'Democrat':'Republican'",
      "as": "Politic"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "states",
          "stack": "normalize",
          "title": "Proportion of Vote"
        },
        "y": {
          "field": "Region",
          "sort": [
            "South East Central",
            "South West Central",
            "West North Central",
            "Mountain",
            "East North Central",
            "South Atlantic"
          ]
        },
        "color": {
          "field": "Politic",
          "scale": {"range": ["#125be3", "#e31212"]},
          "title": "Political Party"
        },
        "tooltip": [
          {"field": "Region"},
          {"field": "Party"},
          {"field": "prop", "format": "~%", "title": "Proportion"},
          {"field":"states", "title":"Total states won"}
          
        ]
      }
    },
    {
      "data": {"values": [{}]},
      "encoding": {"x": {"datum": 0.5}},
      "layer": [
        {
          "mark": "rule",
          "encoding": {"size": {"value": 4}, "color": {"value": "gray"}}
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "bottom",
            "dx": 25,
            "dy": -200,
            "x": "width",
            "text": "Majority",
            "size": 18
          }
        }
      ]
    }
  ],
  "config": {
    "axis":{
      "labelFontSize":12
    }
  }
}
