{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 900,
  "height": 650,
  "background": "#f5f3ed",
  "title": {
    "text": "US State Sub Regions",
    "fontSize": 28,
    "subtitle": "Regions are labelled on map",
    "subtitleFontSize": 24,
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/ne_110m_admin_1_states_provinces%20(1).json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_1_states_provinces"
    }
  },
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "selection": {
        "state_highlight": {
          "type": "multi",
          "fields": ["state"],
          "bind": "legend",
          "on": "mouseover",
          "empty": "none"
        },
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend",
          "on": "mouseover"
        },
        "subregion_highlight": {
          "type": "single",
          "fields": ["Specific_Region"],
          "bind": "legend",
          "on": "mouseover"
        }
      },
      "mark": {"type": "geoshape", "stroke": "#f5f3ed", "strokeWidth":1},
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/final.csv"
            },
            "key": "state",
            "fields": [
              "state",
              "Specific_Region",
              "population",
              "Winning_Party",
              "Region"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "condition": {
            "selection": "region_highlight",
            "field": "Specific_Region",
            "title": "Sub Region",
            "scale": {
              "range": [
                "#b69ede",
                "#1255a6",
                "#faaf3e",
                "#355985",
                "#b51414",
                "#f05151",
                "#de3333",
                "#6b1ee6"
              ]
            }
          },
          "value": null
        },
        "opacity": {
          "condition": {"selection": "subregion_highlight", "value": 0.9},
          "value": 0.25
        },
        "stroke":{
          "condition":{"selection":"state_highlight", "value":"white"},
          "value":"#f5f3ed"
         
          
        },
        "strokeWidth":{
          "condition":{"selection":"state_highlight", "value":4},
          "value":1
          
         
          
        },
        "tooltip": [
          {"field":"state", "title":"State"},
          {"field": "Specific_Region", "title": "Sub Region"},
          {"field": "Region"},
          {"field": "population", "format": ",", "title":"Population"},
          {"field": "Winning_Party", "title": "2016 Elected party"}
          
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["WEST"],
        "x": 205,
        "y": 270,
        "size": 30,
        "angle": 10,
        "color": "darkblue",
        "font": "lucida sans"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["MID WEST"],
        "x": 535,
        "y": 240,
        "size": 30,
        "angle": 0,
        "color": "#4b0699",
        "font": "lucida sans"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["SOUTH"],
        "x": 590,
        "y": 430,
        "size": 30,
        "angle": -12,
        "color": "darkred",
        "font": "lucida sans"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": ["NORTH EAST"],
        "x": 795,
        "y": 190,
        "size": 29,
        "angle": -38,
        "color": "#b38b0b",
        "font": "lucida sans"
      }
    }
  ],
  "config": {
    "legend": {
      "labelFontSize": 15,
      "titleFontSize": 18,
      "titlePadding": 8,
      "orient": "none",
      "direction": "horizontal",
      "columns": 4,
      "legendX": 145,
      "legendY": 610,
      "labelFont": "Lucida Sans Unicode", "titleFont": "Lucida Sans Unicode"
    },
    "style": {"cell": {"stroke": "transparent"}},
    "axis": {"labelFont": "Lucida Sans Unicode", "titleFont": "Lucida Sans Unicode"},

  "header": {"labelFont": "Lucida Sans Unicode", "titleFont": "Lucida Sans Unicode"},
  "mark": {"font": "Lucida Sans Unicode"},
  "title": {"font": "Lucida Sans Unicode", "subtitleFont": "Lucida Sans Unicode"}
  }
}
